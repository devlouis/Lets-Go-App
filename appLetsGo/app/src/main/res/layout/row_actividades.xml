<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">

   <ImageView
        android:id="@+id/iviImagen"
        tools:background="@drawable/banner_test2"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_above="@+id/llaSeparador"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="@drawable/fondo_actividades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlaContentRow"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llaSeparador"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/ic_favorite_24dp"
            android:background="@color/black_cc_transparent"
            android:padding="4dp"
            android:adjustViewBounds="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:id="@+id/iviFavorite" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="0dp"
            android:gravity="center|start">

            <ImageView
                android:id="@+id/iviTicket"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_price" />

            <com.letsgo.appletsgo.app.ui.component.CustomTextView
                android:id="@+id/tviPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:tag="2รง"
                android:text="S/ 5.00"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp">

            <com.letsgo.appletsgo.app.ui.component.CustomTextView
                android:id="@+id/tviCategory"

                android:text="Cine"
                android:textColor="@color/white"

                android:paddingTop="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.letsgo.appletsgo.app.ui.component.CustomTextView
                android:id="@+id/tviNameEvent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:tag=""
                android:text="El amor llama a la puerta"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iviClock"
                    android:src="@drawable/ic_query_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <com.letsgo.appletsgo.app.ui.component.CustomTextView
                    android:tag="1"
                    android:textColor="@color/white"
                    android:text="Hoy, 6:00 pm"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tviDate" />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llaSeparador"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>



</RelativeLayout>